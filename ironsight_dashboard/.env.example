# IronSight Command Center - Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Model Paths
# =============================================================================

# Directory containing model files
MODELS_DIR=./models

# Parent aidtm directory (for accessing shared models)
AIDTM_DIR=..

# Specific model paths (override config file settings)
# NAFNET_MODEL_PATH=../NAFNet-GoPro-width64.pth
# GATEKEEPER_MODEL_PATH=./models/gatekeeper.onnx
# YOLO_SIDEVIEW_PATH=../yolo_sideview_damage_obb.pt
# YOLO_STRUCTURE_PATH=../yolo_structure_obb.pt
# YOLO_WAGON_NUMBER_PATH=./models/wagon_number_obb.pt

# =============================================================================
# GPU Configuration
# =============================================================================

# GPU device selection (comma-separated for multi-GPU)
CUDA_VISIBLE_DEVICES=0

# GPU memory fraction (0.0-1.0)
GPU_MEMORY_FRACTION=0.8

# Enable FP16 inference for faster processing
USE_FP16=true

# SmolVLM quantization bits (4 or 8)
SMOLVLM_QUANTIZATION_BITS=8

# =============================================================================
# Server Configuration
# =============================================================================

# Streamlit server port
STREAMLIT_PORT=8501

# Streamlit server address (0.0.0.0 for all interfaces)
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Enable headless mode (no browser auto-open)
STREAMLIT_SERVER_HEADLESS=true

# =============================================================================
# Performance Settings
# =============================================================================

# Target frames per second
TARGET_FPS=60

# Latency budgets (milliseconds)
GATEKEEPER_TIMEOUT_MS=0.5
SCI_TIMEOUT_MS=0.5
YOLO_COMBINED_TIMEOUT_MS=20.0
NAFNET_TIMEOUT_MS=20.0

# =============================================================================
# Logging Configuration
# =============================================================================

# Log directory
LOGS_DIR=./logs

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable performance incident logging
ENABLE_PERFORMANCE_LOGGING=true

# =============================================================================
# Configuration File
# =============================================================================

# Path to main configuration file
IRONSIGHT_CONFIG=./config/ironsight_config.yaml

# Configuration directory
CONFIG_DIR=./config

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (verbose logging, development features)
DEBUG_MODE=false

# Enable hot-reload for configuration changes
HOT_RELOAD_CONFIG=false

# =============================================================================
# Docker-specific Settings
# =============================================================================

# Container name
CONTAINER_NAME=ironsight-command-center

# Network name
NETWORK_NAME=ironsight-network
